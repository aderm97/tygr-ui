# TYGR Security Agent - Environment Variables

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/tygr"

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL="redis://localhost:6379"

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
# Default LLM provider (can be overridden in UI settings)
STRIX_LLM="openai/gpt-4"
LLM_API_KEY="your-api-key-here"
LLM_API_BASE="" # Optional: for local or custom LLM endpoints

# Additional LLM providers (optional)
ANTHROPIC_API_KEY=""
PERPLEXITY_API_KEY=""

# ============================================================================
# DOCKER CONFIGURATION
# ============================================================================
DOCKER_HOST="unix:///var/run/docker.sock"
STRIX_DOCKER_IMAGE="strix-agent:latest"

# ============================================================================
# SECURITY & ENCRYPTION
# ============================================================================
# IMPORTANT: Change these in production!
ENCRYPTION_SECRET="change-me-in-production-use-strong-secret"
ENCRYPTION_SALT="change-me-in-production-use-random-salt"

# Next Auth (if using authentication)
NEXTAUTH_SECRET="change-me-in-production"
NEXTAUTH_URL="http://localhost:3000"

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
NODE_ENV="development"
ALLOWED_ORIGINS="http://localhost:3000"

# Hunt limits
MAX_CONCURRENT_HUNTS="5"
MAX_ITERATIONS_PER_AGENT="300"
HUNT_TIMEOUT="3600000" # 1 hour in milliseconds

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL="info"
ENABLE_TELEMETRY="false"

# ============================================================================
# NETWORK & PORTS
# ============================================================================
PORT="3000"
SOCKET_IO_PATH="/api/socket"

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Set to true to see detailed logs
DEBUG="false"
